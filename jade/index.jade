        script(src='//oss.maxcdn.com/respond/1.4.2/respond.min.js')

body

    nav.navbar.navbar-default
        .container-fluid
            .navbar-header
                a.navbar-brand(href='#/dashboard') Dashboard

            .collapse.navbar-collapse
                ul.nav.navbar-nav.navbar-right
                    li.dropdown
                        a(href="#" target="_self" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false")
                            span.glyphicon.glyphicon-plus(aria-hidden="true")
                        ul.dropdown-menu
                            li
                                form.project-form(ng-controller="ProjectCtrl", ng-submit="create()")
                                    .form-group
                                        input.form-control(type="text" ng-model="project.name" placeholder="Project name" required)
                                    .checkbox
                                        label
                                            input(type="checkbox")
                                            | Private
                                    button.btn.btn-default(type="submit") Create

    .container-fluid(ng-view)

    script(src='//ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js')
    script(src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js')
    script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.4.5/angular.min.js')
    script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.4.5/angular-route.js')
    script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.4.5/angular-resource.js')
    script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.4.5/angular-animate.js')

    // Angular stuff
    script(src='js/app.js')
    script(src='js/directives.js')
